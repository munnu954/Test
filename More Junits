import org.junit.jupiter.api.Test;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class ReadCSVFileTest {

    @Test
    public void testReadCSVFile() throws IOException {
        ClassLoader classLoader = getClass().getClassLoader(); // Access the class loader

        // Access the file from the resources folder
        File csvFile = new File(classLoader.getResource("test.csv").getFile());

        // Check if the file exists
        if (csvFile.exists()) {
            // The file exists
            List<String[]> data = ReadCSVFile(csvFile);

            // Print the CSV file data
            for (String[] row : data) {
                for (String cell : row) {
                    System.out.print(cell + " ");
                }
                System.out.println();
            }
        } else {
            // The file does not exist
            throw new IOException("The file does not exist.");
        }
    }

    public static List<String[]> ReadCSVFile(File csvFile) throws IOException {
        List<String[]> data = new ArrayList<>();

        // Wrap the scanner in a try-with-resources block to ensure proper file closure
        try (Scanner scanner = new Scanner(csvFile)) {
            while (scanner.hasNextLine()) {
                String[] row = scanner.nextLine().split(",");
                data.add(row);
            }
        }

        return data;
    }
}