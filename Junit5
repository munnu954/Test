@Test
void testParseElseBlock() throws JsonMappingException, JsonProcessingException {
    // Given
    String value = "%test%";
    Map<String, Object> srcMap = new HashMap<>();
    String ruleName = "testRule";

    srcMap.put("test", "Test Value");

    // When
    String result = AlarmPostingUtils.parse(value, srcMap, ruleName);

    // Then
    assertEquals("", result);
}

@Test
void testParseElseBlockArrayIndex() throws JsonMappingException, JsonProcessingException {
    // Given
    String value = "%test[0]%";
    Map<String, Object> srcMap = new HashMap<>();
    String ruleName = "testRule";

    srcMap.put("test", Arrays.asList("Value1", "Value2"));

    // When
    String result = AlarmPostingUtils.parse(value, srcMap, ruleName);

    // Then
    assertEquals("", result);
}

@Test
void testParseElseBlockWithArrayIndexOutOfRange() throws JsonMappingException, JsonProcessingException {
    // Given
    String value = "%test[2]%";
    Map<String, Object> srcMap = new HashMap<>();
    String ruleName = "testRule";

    srcMap.put("test", Arrays.asList("Value1", "Value2"));

    // When
    String result = AlarmPostingUtils.parse(value, srcMap, ruleName);

    // Then
    assertEquals("", result);
}

