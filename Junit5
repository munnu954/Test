import org.junit.jupiter.api.Test;
import org.mockito.Mockito;

import static org.junit.jupiter.api.Assertions.assertNotNull;

public class CommonWrapperApplicationTest {

    @Test
    public void testMain() {
        String[] args = new String[0];
        CommonWrapperApplication.main(args);
        // No exceptions should be thrown
    }

    @Test
    public void testApplicationStart() {
        CommonWrapperApplication commonWrapperApplication = new CommonWrapperApplication();
        assertNotNull(commonWrapperApplication);
        // Just checking if the application context is successfully created
    }

    @Test
    public void testExcludeCassandraDataAutoConfiguration() {
        SpringBootApplication annotation = CommonWrapperApplication.class.getAnnotation(SpringBootApplication.class);
        if (annotation != null) {
            String[] exclude = annotation.exclude();
            for (String excludedClass : exclude) {
                if (excludedClass.equals("org.springframework.boot.autoconfigure.data.cassandra.CassandraDataAutoConfiguration")) {
                    assert false : "CassandraDataAutoConfiguration should be excluded";
                }
            }
        }
        assert true;
    }

    @Test
    public void testExcludeCassandraAutoConfiguration() {
        SpringBootApplication annotation = CommonWrapperApplication.class.getAnnotation(SpringBootApplication.class);
        if (annotation != null) {
            String[] exclude = annotation.exclude();
            for (String excludedClass : exclude) {
                if (excludedClass.equals("com.datastax.driver.core.CassandaraAutoConfiguration")) {
                    assert false : "CassandraAutoConfiguration should be excluded";
                }
            }
        }
        assert true;
    }
}