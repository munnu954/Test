catch (HttpClientErrorException | HttpServerErrorException ex) {
    if (ex.getMessage().contains("Non existent jar id passed to flink cluster")) {
        LOGGER.error("Non existent jar id passed to flink cluster", ex.getMessage());
        // Handle the non existent jar id scenario here
    }
    else if (ex.getMessage().contains("Internal server error: 500 Internal Server Error")) {
        LOGGER.error("Internal server error occurred while triggering job", ex.getMessage());
        // Handle the Internal Server Error scenario here
    }
    else {
        ex.printStackTrace();
        LOGGER.error("Error triggering job", ex.getMessage());

        FileMetadata metadata = kafkaConsumer.logMetadata(collector, fileType, ex);

        kafkaInputProducer.sendFailureMessage(collector, fileType, ex);
        kafkaConsumer.writeLogToFile(metadata, destinationFolderPath);
    }
}