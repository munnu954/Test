@Test
void parseWithInvalidJsonFieldAndDefaultValue() throws Exception {
    // Arrange
    String expression = "%attribute1:details.unknown%";
    srcMap.put("details", Map.of("name", "John"));
    // Act
    String result = alarmPostingUtils.parse(expression, srcMap, "");
    // Assert
    assertEquals("", result);
}

@Test
void parseWithInvalidArrayIndexAndDefaultValue() throws Exception {
    // Arrange
    String expression = "%attribute1: names [5]%";
    srcMap.put("names", List.of("John", "Jane"));
    // Act
    String result = alarmPostingUtils.parse(expression, srcMap, "");
    // Assert
    assertEquals("", result);
}

@Test
void parseWithInvalidJsonFormatAndDefaultValue() throws Exception {
    // Arrange
    String expression = "%attribute1: details%";
    srcMap.put("details", "invalid format");
    // Act
    String result = alarmPostingUtils.parse(expression, srcMap, "");
    // Assert
    assertEquals("", result);
}

@Test
void parseWithNoMatchesAndDefaultValue() throws Exception {
    // Arrange
    String expression ="%nonExistent%";
    // Act
    String result = alarmPostingUtils.parse(expression, srcMap, "");
    // Assert
    assertEquals("%nonExistent%", result);
}