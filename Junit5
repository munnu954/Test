
@Test
public void testEvaluateExpression_expressionContainsPercent_shouldLogException() {
  // Arrange
  String expression = "%";
  Map topoMap = new HashMap<>();

  // Act
  String result = AlarmPostingUtils.evaluateExpression(expression, topoMap);

  // Assert
  assertThat(result).isNull();
  assertThat(AlarmPostingUtils.LOG.getLogEntries()).hasSize(1);
  assertThat(AlarmPostingUtils.LOG.getLogEntries().get(0).getMessage()).isEqualTo("Exception occurred while Parsing Expression: %");
}

@Test
public void testEvaluateExpression_expressionDoesNotContainPercent_shouldReturnResult() {
  // Arrange
  String expression = "foo";
  Map topoMap = new HashMap<>();

  // Act
  String result = AlarmPostingUtils.evaluateExpression(expression, topoMap);

  // Assert
  assertThat(result).isEqualTo("foo");
}