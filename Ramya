import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;
import org.json.JSONObject;

public class CsvtoJsonConversion implements FlatMapFunction<String, String> {

    private String currentObjectName;
    private JSONObject currentObject;

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");

        if (arr.length > 2 && arr[2] != null && !arr[2].isEmpty()) {
            // New main object
            handleMainObject();
            currentObjectName = arr[2].trim();
            currentObject.put("ObjectName", currentObjectName);
            setCurrentObjectDetails(arr);
        } else if (arr.length > 1 && arr[0] != null && !arr[0].isEmpty()) {
            // Sub-object
            handleSubObject(arr);
        }
    }

    private void handleMainObject() {
        if (currentObject != null) {
            collector.collect(currentObject.toString());
        }
        currentObject = new JSONObject();
    }

    private void setCurrentObjectDetails(String[] arr) {
        // Assuming column A contains begin date, column B contains end date, and column C contains ticket number.
        currentObject.put("Begin date", arr[0].trim());
        currentObject.put("End date", arr[1].trim());
        currentObject.put("Ticket number", arr[3].trim());
    }

    private void handleSubObject(String[] arr) {
        // Assuming column A is the sub-object name, and columns B, D, E, F, G contain the corresponding values.
        String subObjectName = arr[0].trim();
        JSONObject subObject = new JSONObject();
        subObject.put("Min", arr[4].trim());
        subObject.put("Average", arr[5].trim());
        subObject.put("Max", arr[6].trim());
        subObject.put("Cumulative counter value", arr[7].trim());

        currentObject.put(subObjectName, subObject);
    }

    @Override
    public void close() {
        if (currentObject != null) {
            collector.collect(currentObject.toString());
        }
    }
}
