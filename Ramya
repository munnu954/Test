import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class AuditService {

    private final CollectionAuditLuceneRepository repository;

    @Autowired
    public AuditService(CollectionAuditLuceneRepository repository) {
        this.repository = repository;
    }

    public CollectionAudit getLastSuccessfulCollectionAudit() {
        return repository.findTopByJobStatusOrderByDateReceivedDesc("COLLECTION_SUCCESSFUL");
    }
}
