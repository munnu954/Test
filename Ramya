@GetMapping("/checkStatus")
public ResponseEntity<Map<String, List<?>>> checkStatus(@RequestParam("host") String url) {
    try {
        List<SpaceCollectorWithAuditDates> savedSpaceCollector = spaceCollectorService.checkStatus(url);
        Map<String, List<?>> response = new HashMap<>();
        response.put("result", savedSpaceCollector);
        return new ResponseEntity<>(response, HttpStatus.OK);
    } catch (Exception e) {
        e.printStackTrace();
        return new ResponseEntity<>(HttpStatus.INTERNAL_SERVER_ERROR);
    }
}
