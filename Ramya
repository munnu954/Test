# Kafka configuration
spring.kafka.bootstrap-servers=your_kafka_bootstrap_servers
spring.kafka.consumer.group-id=your_consumer_group_id
spring.kafka.consumer.auto-offset-reset=latest

# Flink configuration
flink.parallelism=4

# Checkpointing and state backend configuration
flink.checkpoint.interval=10000 # Checkpoint every 10 seconds
flink.checkpoint.timeout=60000  # Checkpoint timeout 60 seconds
flink.checkpoint.min-pause=500  # Minimum pause between checkpoints
flink.checkpoint.max-concurrent=1 # Maximum concurrent checkpoints

# State backend and checkpoint storage
flink.state.backend=hashmap
flink.state.checkpoints.dir=file:///tmp/flink/checkpoints

# Restart strategy
flink.restart.strategy=fixed-delay
flink.restart.attempts=3
flink.restart.delay=10s