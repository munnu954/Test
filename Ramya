public class CsvToJsonConversion implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");
        JsonObject mainObject = new JsonObject();
        JsonObject subObject = null;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i].isEmpty()) {
                continue;  // Skip empty columns
            }

            if (i == 2) {  // Main object details
                mainObject.addProperty("ObjectName", arr[i].trim());
            } else if (i == 0) {  // BeginDate details
                mainObject.addProperty("Begin date", arr[i].trim());
            } else if (i == 1) {  // EndDate details
                mainObject.addProperty("End date", arr[i].trim());
            } else if (i == 3) {  // Ticket number details
                mainObject.addProperty("Ticket number", arr[i].trim());
            } else if (i >= 4 && i % 4 == 0) {  // Sub-object details
                if (subObject == null) {
                    subObject = new JsonObject();
                }

                subObject.addProperty("Min", arr[i]);
                subObject.addProperty("Average", arr[i + 1]);
                subObject.addProperty("Max", arr[i + 2]);
                subObject.addProperty("Cumulative counter value", arr[i + 3]);
            }
        }

        if (subObject != null) {
            mainObject.add("SubObject", subObject);
        }

        collector.collect(mainObject.toString());
    }
}
