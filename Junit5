import org.junit.jupiter.api.Test;
import org.mockito.Mock;
import org.springframework.boot.SpringApplication;
import org.springframework.context.ConfigurableApplicationContext;
import org.springframework.core.env.Environment;
import static org.mockito.Mockito.*;

public class CBRSSuppressionApplicationTest {

    @Mock
    private Environment mockEnv;

    @Mock
    private SpringApplication mockSpringApplication;

    @Mock
    private ConfigurableApplicationContext mockAppContext;

    @Test
    void testMainWithUnsatisfiedDependencyException() {
        // Arrange
        when(mockEnv.getProperty("RDB_BAD_QUERY")).thenReturn("test_bad_query");
        when(mockSpringApplication.run(any(String[].class))).thenThrow(new UnsatisfiedDependencyException("message"));

        // Act
        CBRSSuppressionApplication application = new CBRSSuppressionApplication(mockEnv);
        application.main(new String[]{"arg1"});

        // Assert
        // Verify the error message is logged
    }

    @Test
    void testMainWithoutUnsatisfiedDependencyException() {
        // Arrange
        when(mockEnv.getProperty("RDB_BAD_QUERY")).thenReturn("test_bad_query");

        // Act
        CBRSSuppressionApplication application = new CBRSSuppressionApplication(mockEnv);
        application.main(new String[]{"arg1"});

        // Assert
        // Verify the consumer and readerService are started
    }
}