@Test
void testShutdownInterruptedException() throws Exception {
    // Arrange
    PostingService postingService = new PostingService();
    Thread mockThread = mock(Thread.class);
    
    Field threadListField = PostingService.class.getDeclaredField("threadList");
    threadListField.setAccessible(true);
    List<Thread> threadList = new ArrayList<>();
    threadList.add(mockThread);
    threadListField.set(postingService, threadList);
    
    // Act
    postingService.shutdown();
    
    // Assert
    verify(mockThread).join();
    Mockito.verifyStatic(LOG);
    LOG.error("Interruped Exception occured: ", any(InterruptedException.class));
}