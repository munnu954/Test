import org.springframework.stereotype.Service;
import org.vdsi.space.collections.customauditengine.model.SpaceCollector;

import java.io.IOException;
import java.util.List;

@Service
public class AuditService {

    private final SpaceCollectorRepository spaceCollectorRepository;

    public AuditService(SpaceCollectorRepository spaceCollectorRepository) {
        this.spaceCollectorRepository = spaceCollectorRepository;
    }

    public List<SpaceCollector> checkStatus(String host) throws IOException {
        // Implement logic to fetch SpaceCollector data based on the host
        return spaceCollectorRepository.findByUrl(host);
    }
}
