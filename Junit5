import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

import java.util.Arrays;
import java.util.List;

import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.junit.jupiter.MockitoExtension;

@ExtendWith(MockitoExtension.class)
class MtnInsightsManagerTest {

	@Mock
	MtnInsightsRepository insightsRepository;
	
	@Mock
	AggregateInsightsRepository aggrInsightRepository;
	
	@Mock
	EcpdByKeyRepository ecpdByKeyRepository;
	
	@InjectMocks
	MtnInsightsManager mtnInsightsManager;
	
	@Test
	void testConvertToMtnInsights_OutageCategory() {
		List<MtnInsightsEntity> entities = Arrays.asList(
				createMockMtnInsightsEntity("outage_category", "MTNOUTAGE", "Event1"),
				createMockMtnInsightsEntity("outage_category", "MTNOUTAGE", "Event2"),
				createMockMtnInsightsEntity("outage_category", "MTNOUTAGECASE", "Event3")
		);
		boolean flag = true;
		
		InsightsMtn insightsMtn = mtnInsightsManager.convertToMtnInsights(entities, flag);
		
		assertNotNull(insightsMtn);
		assertNotNull(insightsMtn.getCategoryInsights());
		assertEquals(1, insightsMtn.getCategoryInsights().length);
		assertEquals("outage_category", insightsMtn.getCategoryInsights()[0].getCategory());
		assertEquals(2, insightsMtn.getCategoryInsights()[0].getInsights().length);
		assertEquals("MTNOUTAGE", insightsMtn.getCategoryInsights()[0].getInsights()[0].getName());
		assertEquals("Event1, Event2", insightsMtn.getCategoryInsights()[0].getInsights()[0].getValue());
		assertEquals("MTNOUTAGECASE", insightsMtn.getCategoryInsights()[0].getInsights()[1].getName());
		assertEquals("Event3", insightsMtn.getCategoryInsights()[0].getInsights()[1].getValue());
	}
	
	// Helper method to create a mock MtnInsightsEntity
	private MtnInsightsEntity createMockMtnInsightsEntity(String category, String insightName, String insightValues) {
		MtnInsightsEntity entity = new MtnInsightsEntity();
		entity.setCatagory(category);
		MtnInsightsPK pk = new MtnInsightsPK();
		pk.setInsightName(insightName);
		entity.setInsightValues(insightValues);
		entity.setPk(pk);
		return entity;
	}

}

In this test class, we are covering the scenario where the category is "outage_category" in the "ConvertToMtnInsights" method of the "MtnInsightsManager" class. You can add more test cases to cover other scenarios as needed.