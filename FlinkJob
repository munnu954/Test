
import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;
import org.json.JSONObject;

public class CsvtoJsonTransformer implements FlatMapFunction {

    @Override
    public void flatMap(String s, Collector collector) throws Exception {
        String[] arr = s.split(",");
        JSONObject obj = new JSONObject();

        for (int i = 0; i < arr.length; i++) {
            String jsonKey = arr[i];
            // Remove leading and trailing whitespace from the input values
            jsonKey = jsonKey.trim();
            // Remove any existing double quotes from the input values
            jsonKey = jsonKey.replace("\"", "");
            obj.put(jsonKey, "");
        }

        collector.collect(obj.toString());
    }
}