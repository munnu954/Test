@Test
void testConvertToObject_JAXBException() throws JAXBException, JsonProcessingException {
    // Arrange
    BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
    String xml = "<example>This is an example</example>";
    
    // Mock JAXBContext to throw JAXBException
    JAXBContext mockJAXBContext = Mockito.mock(JAXBContext.class);
    Mockito.when(JAXBContext.newInstance(Mockito.any())).thenThrow(new JAXBException("Mocked JAXBException"));
    
    // Act
    Assertions.assertThrows(JAXBException.class, () -> {
        batchLoaderUtils.convertToObject(xml, ExampleClass.class);
    });
    
    // Verify
    Mockito.verify(LOGGER).error(Mockito.anyString(), Mockito.any(JAXBException.class));
}