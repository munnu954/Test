```java
import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.Test;

class BatchLoaderUtilsTest {

  @Test
  void isValidData_nullInput_returnsFalse() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData(null);
    assertEquals(false, isValid);
  }

  @Test
  void isValidData_emptyStringInput_returnsFalse() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData("");
    assertEquals(false, isValid);
  }

  @Test
  void isValidData_blankStringInput_returnsFalse() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData("   ");
    assertEquals(false, isValid);
  }

  @Test
  void isValidData_zeroStringInput_returnsFalse() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData("0");
    assertEquals(false, isValid);
  }

  @Test
  void isValidData_nonEmptyStringInput_returnsTrue() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData("abc");
    assertEquals(true, isValid);
  }

  @Test
  void isValidData_nonBlankStringInput_returnsTrue() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData(" abc ");
    assertEquals(true, isValid);
  }

  @Test
  void isValidData_nonZeroStringInput_returnsTrue() {
    BatchLoaderUtils utils = new BatchLoaderUtils();
    boolean isValid = utils.isValidData("123");
    assertEquals(true, isValid);
  }
}
```