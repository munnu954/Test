import com.google.gson.JsonObject;
import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;

public class CsvtoJsonConversion implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] lines = input.split(System.lineSeparator());
        String objectName = "";
        JsonObject result = new JsonObject();

        for (String line : lines) {
            String[] arr = line.split(",");
            if (arr.length > 0 && !arr[2].isEmpty()) {
                objectName = arr[2].trim(); // Assuming ObjectName is in the third column (index 2)
                continue; // Skip the header row
            }

            String sectionName = arr[0].trim(); // Assuming section name is in the first column (index 0)
            JsonObject sectionObject = new JsonObject();

            for (int i = 3; i < arr.length; i += 4) {
                JsonObject metricObject = new JsonObject();
                metricObject.addProperty("Min", arr[i].trim());
                metricObject.addProperty("Average", arr[i + 1].trim());
                metricObject.addProperty("Max", arr[i + 2].trim());
                metricObject.addProperty("Cumulative Counter Value", arr[i + 3].trim());
                sectionObject.add(arr[i].trim(), metricObject);
            }

            result.add(objectName + " - " + sectionName, sectionObject);
        }

        collector.collect(result.toString());
    }
}
