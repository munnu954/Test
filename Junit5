@Test
void testParseElseBlock() throws JsonMappingException, JsonProcessingException {

    // Given
    String value = "%test%";
    Map<String, Object> srcMap = new HashMap<>();
    srcMap.put("test", "value");

    // When
    String result = AlarmPostingUtils.parse(value, srcMap, "ruleName");

    // Then
    assertEquals("value", result);
}

@Test
void testParseElseBlockWithEmptyString() throws JsonMappingException, JsonProcessingException {

    // Given
    String value = "%test%";
    Map<String, Object> srcMap = new HashMap<>();
    
    // When
    String result = AlarmPostingUtils.parse(value, srcMap, "ruleName");

    // Then
    assertEquals("", result);
}

@Test
void testParseElseBlockWithArrayIndex() throws JsonMappingException, JsonProcessingException {

    // Given
    String value = "%test[0]%";
    List<String> testList = new ArrayList<>();
    testList.add("element1");
    testList.add("element2");
    Map<String, Object> srcMap = new HashMap<>();
    srcMap.put("test", testList);

    // When
    String result = AlarmPostingUtils.parse(value, srcMap, "ruleName");

    // Then
    assertEquals("element1", result);
}

@Test
void testParseElseBlockWithInvalidAttribute() throws JsonMappingException, JsonProcessingException {

    // Given
    String value = "%test%";
    Map<String, Object> srcMap = new HashMap<>();
    srcMap.put("notTest", "value");

    // When
    String result = AlarmPostingUtils.parse(value, srcMap, "ruleName");

    // Then
    assertEquals("", result);
}