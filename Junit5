@Test
void testInvalidFilePath() {
CsvWriter writer = new CsvWriter();
String[] headers = {"ID", "Name"};
List rows = new ArrayList
rows.add(new String[] {"1", "John"});
rows.add(new String[] {"2", "Jane"});
String filePath = "/invalid/file/path";

// Assert that an IOException is thrown with the expected error message
IOException exception = assertThrows(IOException.class, () -> {
writer.writeCsv(headers, rows, filePath);
});
assertEquals("Invalid file path", exception.getMessage());
}