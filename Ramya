public JSONObject buildAuditQuery() throws JSONException {
    // Create a "must" array for query conditions
    JSONArray mustClauses = new JSONArray();

    // Add must clause for COLLECTION_SUCCESSFUL and FLINK_JOB_SUCCESSFUL statuses
    JSONObject statusClause1 = new JSONObject();
    statusClause1.put("term", new JSONObject().put("jobStatus", "COLLECTION_SUCCESSFUL"));
    mustClauses.put(statusClause1);

    JSONObject statusClause2 = new JSONObject();
    statusClause2.put("term", new JSONObject().put("jobStatus", "FLINK_JOB_SUCCESSFUL"));
    mustClauses.put(statusClause2);

    // Build the final JSON object with "bool" and "sort" elements
    JSONObject query = new JSONObject();
    JSONObject bool = new JSONObject();
    bool.put("must", mustClauses);
    query.put("bool", bool);

    // Add sorting condition by "createdAt" in descending order
    JSONArray sort = new JSONArray();
    JSONObject sortField = new JSONObject();
    sortField.put("createdAt", "desc");
    sort.put(sortField);

    // Construct the result JSON object
    JSONObject result = new JSONObject();
    result.put("query", query);
    result.put("sort", sort);

    return result;
}
