```java
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;
import static org.mockito.Mockito.when;
import static org.junit.jupiter.api.Assertions.assertEquals;
import java.io.File;

public class KafkaConsumerTest {

    @Mock
    private KafkaTopicUtil util;

    @InjectMocks
    private KafkaConsumer kafkaConsumer;

    @BeforeEach
    public void setup() {
        MockitoAnnotations.initMocks(this);
    }

    @Test
    public void testFileExistsAndTopicPresent() {
        when(util.isKafkaTopicPresent("topic")).thenReturn(true);
        String sourceFilePath = "fileExists.txt"; // ensure this file exists in the path
        assertEquals(true, new File(sourceFilePath).exists() && util.isKafkaTopicPresent("topic"));
    }

    @Test
    public void testFileNotExistsAndTopicPresent() {
        when(util.isKafkaTopicPresent("topic")).thenReturn(true);
        String sourceFilePath = "fileNotExists.txt"; // ensure this file doesn't exist in the path
        assertEquals(false, new File(sourceFilePath).exists() && util.isKafkaTopicPresent("topic"));
    }

    @Test
    public void testFileExistsAndTopicNotPresent() {
        when(util.isKafkaTopicPresent("topic")).thenReturn(false);
        String sourceFilePath = "fileExists.txt"; // ensure this file exists in the path
        assertEquals(false, new File(sourceFilePath).exists() && util.isKafkaTopicPresent("topic"));
    }

    @Test
    public void testFileNotExistsAndTopicNotPresent() {
        when(util.isKafkaTopicPresent("topic")).thenReturn(false);
        String sourceFilePath = "fileNotExists.txt"; // ensure this file doesn't exist in the path
        assertEquals(false, new File(sourceFilePath).exists() && util.isKafkaTopicPresent("topic"));
    }
}
```
These test cases cover all the possible scenarios for the if block in the code. Please replace the "fileExists.txt" and "fileNotExists.txt" with the actual file paths for your use case.