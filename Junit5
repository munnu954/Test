import org.junit.jupiter.api.Test;
import org.mockito.MockedStatic;
import org.mockito.Mockito;

import java.util.HashMap;
import java.util.Map;

import static org.junit.jupiter.api.Assertions.assertEquals;

public class AlarmPostingUtilsTest {

    @Test
    public void testElseBlockCoverage() {
        Map<String, Object> srcMap = new HashMap<>();
        srcMap.put("attribute1", "value1");

        String value = "Some %attribute1% value";
        String ruleName = "Rule1";

        try (MockedStatic<RulesConstants> mockedRulesConstants = Mockito.mockStatic(RulesConstants.class)) {
            mockedRulesConstants.when(RulesConstants::getObjectMapper).thenReturn(() -> {
                return new ObjectMapper();
            });

            String result = AlarmPostingUtils.parse(value, srcMap, ruleName);
            assertEquals("Some value1 value", result);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}