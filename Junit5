@Test
void evaluateExpressionWithException() {
    // Arrange
    String expression = "%attribute1:details.name%";
    Map<String, Object> srcMap = new HashMap<>();
    srcMap.put("details", Map.of("name", "John"));

    // Act
    when(alarmPostingUtils.parse(anyString(), anyMap(), anyString())).thenThrow(new RuntimeException());
    String result = alarmPostingUtils.evaluateExpression(expression, srcMap);

    // Assert
    assertEquals("", result);
    verify(LOG, times(1)).error(anyString(), anyString(), anyString());
}