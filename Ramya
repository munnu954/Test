import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;
import org.json.JSONObject;

public class CsvToJsonConversion implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");
        JSONObject mainObject = new JSONObject();
        JSONObject subObject = null;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i].isEmpty()) {
                continue;  // Skip empty columns
            }

            if (i == 2) {  // Main object details
                mainObject.put("ObjectName", arr[i].trim());
            } else if (i == 0) {  // BeginDate details
                mainObject.put("Begin date", arr[i].trim());
            } else if (i == 1) {  // EndDate details
                mainObject.put("End date", arr[i].trim());
            } else if (i == 3) {  // Ticket number details
                mainObject.put("Ticket number", arr[i].trim());
            } else if (i + 3 < arr.length && (i + 3) % 4 == 0) {  // Sub-object details
                if (subObject == null) {
                    subObject = new JSONObject();
                }

                subObject.put("Min", arr[i]);
                subObject.put("Average", arr[i + 1]);
                subObject.put("Max", arr[i + 2]);
                subObject.put("Cumulative counter value", arr[i + 3]);
            }
        }

        if (subObject != null) {
            mainObject.put("SubObject", subObject);
        }

        collector.collect(mainObject.toString());
    }
}
