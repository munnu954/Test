import org.junit.jupiter.api.*;

import static org.junit.jupiter.api.Assertions.*;

public class SpaceCollectorTest {

    private SpaceCollector spaceCollector1;
    private SpaceCollector spaceCollector2;
    private SpaceCollector spaceCollector3;
    private SpaceCollector spaceCollector4;

    @BeforeEach
    public void setUp() {
        spaceCollector1 = SpaceCollector.builder()
                .inputFilePath("input1.txt")
                .id(1)
                .url("http://example.com")
                .port(8080)
                .outputFilePath("output1.txt")
                .build();

        spaceCollector2 = SpaceCollector.builder()
                .inputFilePath("input1.txt")
                .id(1)
                .url("http://example.com")
                .port(8080)
                .outputFilePath("output1.txt")
                .build();

        spaceCollector3 = SpaceCollector.builder()
                .inputFilePath("input2.txt")
                .id(2)
                .url("http://example.org")
                .port(9090)
                .outputFilePath("output2.txt")
                .build();

        spaceCollector4 = SpaceCollector.builder()
                .inputFilePath(null)
                .id(null)
                .url(null)
                .port(null)
                .outputFilePath(null)
                .build();
    }

    @Test
    public void testEquals_sameObjects_returnsTrue() {
        assertTrue(spaceCollector1.equals(spaceCollector1));
    }

    @Test
    public void testEquals_equalObjects_returnsTrue() {
        assertTrue(spaceCollector1.equals(spaceCollector2));
    }

    @Test
    public void testEquals_notEqualObjects_returnsFalse() {
        assertFalse(spaceCollector1.equals(spaceCollector3));
    }

    @Test
    public void testEquals_nullObject_returnsFalse() {
        assertFalse(spaceCollector1.equals(null));
    }

    @Test
    public void testEquals_differentClass_returnsFalse() {
        assertFalse(spaceCollector1.equals("string"));
    }

    @Test
    public void testEquals_nullFields_equalObjects_returnsTrue() {
        assertTrue(spaceCollector4.equals(spaceCollector4));
    }

    @Test
    public void testEquals_nullFields_notEqualObjects_returnsFalse() {
        assertFalse(spaceCollector4.equals(spaceCollector1));
    }
}