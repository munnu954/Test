@Then("validate the converted MRFC json content")
public void validateTheConvertedMRFCJsonContent() throws JSONException {
    JSONArray jsonArray = new JSONArray(this.jsonFirstRow);
    
    // Get the 3rd row (index 2) from the JSON array
    JSONObject thirdRow = jsonArray.getJSONObject(2);
    
    // Get the 4th row (index 3) from the JSON array
    JSONObject fourthRow = jsonArray.getJSONObject(3);
    
    // Validate IPCQLEN in 3rd row
    assertEquals(140, thirdRow.getInt("IPCQLEN"));
    
    // Validate DESTNODETYPE in 3rd row
    assertEquals(2, thirdRow.getInt("DESTNODETYPE"));
    
    // Validate IPCQLEN in 4th row
    assertEquals(140, fourthRow.getInt("IPCQLEN"));
    
    // Validate DESTNODETYPE in 4th row
    assertEquals(2, fourthRow.getInt("DESTNODETYPE"));
}