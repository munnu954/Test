import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class BatchLoaderUtilsTest {

    @Test
    void testIsValidData_NullInput() {
        BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
        assertFalse(batchLoaderUtils.isValidData(null));
    }

    @Test
    void testIsValidData_BlankInput() {
        BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
        assertFalse(batchLoaderUtils.isValidData(""));
    }

    @Test
    void testIsValidData_EmptyInput() {
        BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
        assertFalse(batchLoaderUtils.isValidData(" "));
    }

    @Test
    void testIsValidData_ZeroInput() {
        BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
        assertFalse(batchLoaderUtils.isValidData("0"));
    }

    @Test
    void testIsValidData_ValidInput() {
        BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
        assertTrue(batchLoaderUtils.isValidData("valid"));
    }

    @Test
    void testIsValidData_OtherValidInput() {
        BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();
        assertTrue(batchLoaderUtils.isValidData("other valid"));
    }
}