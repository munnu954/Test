import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertThrows;
import static org.mockito.Mockito.*;

public class CommonWrapperControllerTest {

    @Test
    public void testGetClrGraphicsCatchBlock() {
        // Mock dependencies
        ClrGraphicsService clrGraphicsService = mock(ClrGraphicsService.class);
        when(clrGraphicsService.getClrGraphics(anyString(), anyString(), anyString())).thenThrow(new RuntimeException("Mocked exception"));

        CommonWrapperController controller = new CommonWrapperController();
        controller.clrGraphicsService = clrGraphicsService; // Set the mocked service

        // Call the method and catch the exception
        Exception exception = assertThrows(Exception.class, () -> {
            controller.getClrGraphics(); // This should throw an exception
        });

        // Verify that the error is logged
        assertTrue(exception.getMessage().contains("Mocked exception"));
    }
}