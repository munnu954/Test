@Test
void parseWithEmptyAttributeExp() throws Exception {
  // Arrange
  String expression = "%attribute1%";
  
  // Act
  String result = alarmPostingUtils.parse(expression, srcMap, "");
  
  // Assert
  assertEquals("", result);
}

@Test
void parseWithInvalidAttributeName() throws Exception {
  // Arrange
  String expression = "%invalidAttribute%";
  
  // Act
  String result = alarmPostingUtils.parse(expression, srcMap, "");
  
  // Assert
  assertEquals("", result);
}

@Test
void parseWithInvalidArrayIndexFormat() throws Exception {
  // Arrange
  String expression = "%attribute1:names%";
  srcMap.put("names", List.of("John", "Jane"));
  
  // Act
  String result = alarmPostingUtils.parse(expression, srcMap, "");
  
  // Assert
  assertEquals("", result);
}

@Test
void parseWithEmptySrcMap() throws Exception {
  // Arrange
  String expression = "%attribute1:details.name%";
  
  // Act
  srcMap.clear();
  String result = alarmPostingUtils.parse(expression, srcMap, "");
  
  // Assert
  assertEquals("", result);
}

@Test
void parseWithNullSrcMap() throws Exception {
  // Arrange
  String expression = "%attribute1:details.name%";
  
  // Act
  srcMap = null;
  String result = alarmPostingUtils.parse(expression, srcMap, "");
  
  // Assert
  assertEquals("", result);
}