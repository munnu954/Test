```java
import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.Test;

public class MtnInsightsValidatorTest {

    private MtnInsightsValidator validator = new MtnInsightsValidator();

    @Test
    void testValidate_validSingleAttribute() {
        MtnInsightsRequest request = new MtnInsightsRequest();
        request.setRequestType(InsightsRequestType.INSERTMTNINSIGHTS);
        request.setKeyAttributes(new MtnInsightsAttributes());
        request.getServiceHeader(); // Avoid NullPointerException

        validator.validate(request);
    }

    @Test
    void testValidate_validListAttribute() {
        MtnInsightsRequest request = new MtnInsightsRequest();
        request.setRequestType(InsightsRequestType.INSERTMTNINSIGHTS);
        request.setListKeyAttributes(new MtnInsightsAttributes[] {new MtnInsightsAttributes()});
        request.getServiceHeader(); // Avoid NullPointerException

        validator.validate(request);
    }

    @Test
    void testValidate_invalidRequest() {
        MtnInsightsRequest request = new MtnInsightsRequest();
        request.getServiceHeader(); // Avoid NullPointerException

        assertThrows(InvalidRequestException.class, () -> validator.validate(request));
    }

    @Test
    void testValidate_invalidNeither() {
        MtnInsightsRequest request = new MtnInsightsRequest();
        request.setRequestType(InsightsRequestType.INSERTMTNINSIGHTS);
        request.getServiceHeader(); // Avoid NullPointerException

        assertThrows(InvalidRequestException.class, () -> validator.validate(request));
    }

    @Test
    void testValidate_invalidIterator() {
        MtnInsightsRequest request = new MtnInsightsRequest();
        request.setRequestType(InsightsRequestType.INSERTMTNINSIGHTS);
        request.setKeyAttributes(new MtnInsightsAttributes());
        request.getServiceHeader(); // Avoid NullPointerException

        assertThrows(InvalidRequestException.class, () -> validator.validateIterator("KeyAttributes", request.getKeyAttributes(), "KeyAttributes"));
    }

    @Test
    void testValidate_validMtnInsightsSearchRequest() {
        MtnInsightsSearchRequest request = new MtnInsightsSearchRequest();
        request.setServiceHeader(new ServiceHeader());
        request.setServiceRequest(new MtnInsightsSearchParam());
        request.getServiceRequest().setEcpdId("ecpdId");
        request.getServiceRequest().setInsightCategory(new String[] {"insightCategory"});
        request.getServiceRequest().setInsightName(new String[] {"insightName"});
        request.getServiceRequest().setMtn("mtn");

        validator.validate(request);
    }

    @Test
    void testValidate_invalidMtnInsightsSearchRequest() {
        MtnInsightsSearchRequest request = new MtnInsightsSearchRequest();
        request.setServiceHeader(new ServiceHeader());
        request.setServiceRequest(new MtnInsightsSearchParam());

        assertThrows(InvalidRequestException.class, () -> validator.validate(request));
    }
}
```