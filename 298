@Test
public void testValidateLength() throws Exception {
    String parameter = "This is a long string";
    String alarmIdentity = "12345";
    int maxLength = 10;
    String parameterName = "Test Parameter";
    String expected = "This is a";

    AlarmRepositoryImpl alarmRepositoryImpl = new AlarmRepositoryImpl();
    Method method = AlarmRepositoryImpl.class.getDeclaredMethod("validateLength", String.class, String.class, int.class, String.class);
    method.setAccessible(true);
    String actual = (String) method.invoke(alarmRepositoryImpl, parameter, alarmIdentity, maxLength, parameterName);

    assertEquals(expected, actual);

    parameter = "Short";
    maxLength = 10;
    expected = "Short";
    actual = (String) method.invoke(alarmRepositoryImpl, parameter, alarmIdentity, maxLength, parameterName);
    assertEquals(expected, actual);

    parameter = null;
    maxLength = 10;
    assertNull(method.invoke(alarmRepositoryImpl, parameter, alarmIdentity, maxLength, parameterName));
}