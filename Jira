import org.junit.jupiter.api.Test;
import org.springframework.boot.test.context.SpringBootTest;

@SpringBootTest
public class FlinkJobUploadTest {

    @Test
    public void testUploadJob() throws Exception {
        // Arrange
        String input = "input";
        String topic = "topic";
        String bootstrapServer = "bootstrapServer";

        // Act
        String response = new FlinkJobUploader().uploadJob(input, topic, bootstrapServer);

        // Assert
        assertEquals("200 OK", response);
    }

    @Test
    public void testUploadJobWithInvalidInput() throws Exception {
        // Arrange
        String input = null;
        String topic = "topic";
        String bootstrapServer = "bootstrapServer";

        // Act
        String response = new FlinkJobUploader().uploadJob(input, topic, bootstrapServer);

        // Assert
        assertEquals("400 Bad Request", response);
    }

    @Test
    public void testUploadJobWithInvalidTopic() throws Exception {
        // Arrange
        String input = "input";
        String topic = null;
        String bootstrapServer = "bootstrapServer";

        // Act
        String response = new FlinkJobUploader().uploadJob(input, topic, bootstrapServer);

        // Assert
        assertEquals("400 Bad Request", response);
    }

    @Test
    public void testUploadJobWithInvalidBootstrapServer() throws Exception {
        // Arrange
        String input = "input";
        String topic = "topic";
        String bootstrapServer = null;

        // Act
        String response = new FlinkJobUploader().uploadJob(input, topic, bootstrapServer);

        // Assert
        assertEquals("400 Bad Request", response);
    }
}