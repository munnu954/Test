public class CsvtoJsonTransformer implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String s, Collector<String> collector) throws Exception {
        String[] arr = s.split(",");
        JSONObject obj = new JSONObject();

        String[] keys = arr[0].split(","); // Assuming the first row contains the headers

        for (int i = 0; i < keys.length; i++) {
            String jsonKey = keys[i].trim().replace(""‌, "");
            String jsonValue = arr[i].trim().replace(""‌, ""); // Assuming the values are in the same order as headers
            obj.put(jsonKey, jsonValue);
        }

        collector.collect(obj.toString());
    }