public Optional<SpaceCollector> poll(int timeout) {
    ConsumerRecord<String, Object> record = kafkaConsumer.poll(Duration.ofMillis(timeout)).iterator().next();
    SpaceCollector spaceCollector;
    
    try {
        spaceCollector = (SpaceCollector) record.value();
    } catch (ClassCastException e) {
        return Optional.empty();
    }
    
    return Optional.of(spaceCollector);
}