public UnifiedAuditMessage logMetadata(String fileType, ResponseEntity errorMessage) {
    String currentDate = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss").format(new Date());
    UnifiedAuditMessage auditData = new UnifiedAuditMessage(collector.getInputFilePath(),
            currentDate, currentDate, 0, 0, 0, "FAILURE", "", "", errorMessage.getStatusCode().toString());
    return auditData;
}

