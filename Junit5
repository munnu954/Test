import org.junit.jupiter.api.Assertions;
import org.junit.jupiter.api.Test;

class BatchLoaderUtilsTest {

    private final BatchLoaderUtils batchLoaderUtils = new BatchLoaderUtils();

    @Test
    void testIsValidDataWithNullInput() {
        Assertions.assertFalse(batchLoaderUtils.isValidData(null));
    }

    @Test
    void testIsValidDataWithEmptyInput() {
        Assertions.assertFalse(batchLoaderUtils.isValidData(""));
    }

    @Test
    void testIsValidDataWithBlankInput() {
        Assertions.assertFalse(batchLoaderUtils.isValidData("   "));
    }

    @Test
    void testIsValidDataWithValidInput() {
        Assertions.assertTrue(batchLoaderUtils.isValidData("valid input"));
    }
}