@RunWith(MockitoJUnitRunner.class)
public class AlarmPostingUtilsTest {

    @Mock
    private Environment env;

    @InjectMocks
    private AlarmPostingUtils alarmPostingUtils;

    @Test
    public void testParse_replaceWithEmptyString() throws JsonMappingException, JsonProcessingException {
        String value = "Test Value %key1%";
        Map<String, Object> srcMap = new HashMap<>();
        srcMap.put("key1", "Replacement Value");

        String result = alarmPostingUtils.parse(value, srcMap, "Test Rule");

        assertEquals("Test Value Replacement Value", result);
    }

    @Test
    public void testParse_replaceWithEmptyString_whenAttributeNotPresent() throws JsonMappingException, JsonProcessingException {
        String value = "Test Value %key2%";
        Map<String, Object> srcMap = new HashMap<>();

        String result = alarmPostingUtils.parse(value, srcMap, "Test Rule");

        assertEquals("Test Value ", result);
    }

    @Test
    public void testParse_replaceWithEmptyString_whenAttributeNotPresentInMap() throws JsonMappingException, JsonProcessingException {
        String value = "Test Value %key1%";
        Map<String, Object> srcMap = new HashMap<>();
        srcMap.put("key2", "Replacement Value");

        String result = alarmPostingUtils.parse(value, srcMap, "Test Rule");

        assertEquals("Test Value ", result);
    }
}