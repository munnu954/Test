private String queryBasedOnParameter(Map<String, Object> queryParams) {
    String query = "";
    StringJoiner finalQuery = new StringJoiner("");

    if (queryParams.containsKey("locationCLLI") && queryParams.containsKey("siteName")) {
        finalQuery.add("SELECT * FROM your_table WHERE site.clli_code = '" + queryParams.get("locationCLLI") + "' AND site.site_name = '" + queryParams.get("siteName") + "'");
    } else if (queryParams.containsKey("locationCLLI")) {
        finalQuery.add("SELECT * FROM your_table WHERE site.clli_code = '" + queryParams.get("locationCLLI") + "'");
    } else if (queryParams.containsKey("siteName")) {
        finalQuery.add("SELECT * FROM your_table WHERE site.site_name = '" + queryParams.get("siteName") + "'");
    }

    return finalQuery.toString();
}