@Test
public void testGetClrGraphics_exceptionHandling() throws Exception {
    // Arrange
    String circuitId = "123456";
    String sourceSys = "system1";
    String cnd = "N";
    
    when(URLDecoder.decode(anyString(), anyString())).thenThrow(UnsupportedEncodingException.class);
    
    // Act
    String response = commonWrapperController.getClrGraphics(circuitId, sourceSys, cnd);
    
    // Assert
    verify(clrGraphicsService, never()).getClrGraphics(anyString(), anyString(), anyString());
    assertTrue(response.length() > 0);
    assertTrue(response.contains("Error"));
}
