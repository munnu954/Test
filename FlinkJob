public UnifiedAuditMessage sendMessage(String fileType, ResponseEntity response, boolean isSuccess) {
    UnifiedAuditMessage auditMsg = new UnifiedAuditMessage(
        this.getInputFilePath(),
        this.getUrl(),
        this.getPort(),
        this.getOutputFilePath(),
        this.getDelimiters(),
        fileType,
        DateTime.now(),
        DateTime.now(),
        this.getNo_of_records_in_the_file(),
        this.getNo_of_records_processed(),
        this.getNo_of_records_failed(),
        UUID.randomUUID(),
        UUID.randomUUID(),
        Collections.singletonList(response.getStatusCode().toString()),
        this.getCollector_id(),
        isSuccess ? JobStatus.COLLECTION_SUCCESSFUL : JobStatus.COLLECTION_FAILED
    );
    Logger.info(String.format("
    this.writeMessage(auditMsg);
    return auditMsg;