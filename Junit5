private String queryBasedOnParameter(Map<String, Object> queryParams) {
    String finalQuery = "";

    if (queryParams.containsKey("outputControl") && "LOCATION".equalsIgnoreCase((String) queryParams.get("outputControl"))) {
        finalQuery = coconutDeviceMSConstants.COCONUT_V3_SITE_QUERY;

        if (queryParams.containsKey("locationCLLI")) {
            finalQuery += " WHERE locationCLLI = '" + queryParams.get("locationCLLI") + "'";
        }

        if (queryParams.containsKey("siteName")) {
            if (finalQuery.contains("WHERE")) {
                finalQuery += " AND siteName = '" + queryParams.get("siteName") + "'";
            } else {
                finalQuery += " WHERE siteName = '" + queryParams.get("siteName") + "'";
            }
        }
    }

    return finalQuery;
}