import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.vdsi.space.collections.customauditengine.model.CollectionAudit;
import org.vdsi.space.collections.customauditengine.repositories.CollectionAuditLuceneRepository;

import java.util.List;

@Service
public class AuditService {

    @Autowired
    private CollectionAuditLuceneRepository collectionAuditLuceneRepository;

    public List<CollectionAudit> findLastProcessedData(String status) {
        // Call the appropriate method in CollectionAuditLuceneRepository to fetch data based on status
        // Assuming the method returns the data in descending order of processedDate
        return collectionAuditLuceneRepository.findByStatusOrderByProcessedDateDesc(status);
    }
}
