  @Test
    void getAlarmDetailsById_WhenNotFound_ShouldHandleException() throws Exception {
        // Inject mock RestTemplate via reflection
        Field restTemplateField = ApiOperation.class.getDeclaredField("restTemplate");
        restTemplateField.setAccessible(true);
        restTemplateField.set(apiOperation, restTemplate);

        // Configure mock parameters
        when(configParams.getAlarmFetchURL()).thenReturn("http://dummy-url");
        when(configParams.getAlarmFilterKey()).thenReturn("dummy-key");

        // Force exception
        when(restTemplate.exchange(
            anyString(),
            any(HttpMethod.class),
            any(HttpEntity.class),
            eq(String.class)
        )).thenThrow(HttpClientErrorException.NotFound.create(
            HttpStatus.NOT_FOUND, 
            "Not Found", 
            new HttpHeaders(), 
            new byte, 
            null
        ));

        String result = apiOperation.getAlarmDetailsById("test-id");
        
        assertNull(result);