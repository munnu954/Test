public class CsvToJsonConversion implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");
        JsonObject mainObject = null;
        JsonObject subObject = null;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i].isEmpty()) {
                continue;  // Skip empty columns
            }

            if (i % 7 == 2) {  // Main object details
                if (mainObject != null) {
                    collector.collect(mainObject.toString());  // Collect the previous mainObject
                }
                mainObject = new JsonObject();
                mainObject.addProperty("ObjectName", arr[i].trim());
                subObject = null;  // Reset subObject for the new mainObject
            } else if (i % 7 == 0) {  // BeginDate details
                mainObject.addProperty("Begin date", arr[i].trim());
            } else if (i % 7 == 1) {  // EndDate details
                mainObject.addProperty("End date", arr[i].trim());
            } else if (i % 7 == 5) {  // Ticket number details
                mainObject.addProperty("Ticket number", arr[i].trim());
            } else if (i % 7 == 6) {  // Sub-object details
                if (subObject == null) {
                    subObject = new JsonObject();
                }

                subObject.addProperty("Min", arr[i + 3]);
                subObject.addProperty("Average", arr[i + 4]);
                subObject.addProperty("Max", arr[i + 5]);
                subObject.addProperty("Cumulative counter value", arr[i + 6]);
                mainObject.add("SubObject", subObject);
            }
        }

        if (mainObject != null) {
            collector.collect(mainObject.toString());  // Collect the last mainObject
        }
    }
}
