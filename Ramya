import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;
import org.json.JSONObject;

public class CsvtoJsonConversion implements FlatMapFunction<String, String> {

    private JSONObject jsonObject;
    private String currentObjectName;
    private JSONObject currentSubObject;

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");

        if (arr.length > 2 && arr[2] != null && !arr[2].isEmpty()) {
            // New Object Name
            if (jsonObject != null) {
                // Save the completed object
                jsonObject.put("Begin date", arr[0].trim());
                jsonObject.put("End date", arr[1].trim());
                jsonObject.put("Ticket number", arr[3].trim());
                collector.collect(jsonObject.toString());
            }

            currentObjectName = arr[2].trim();
            jsonObject = new JSONObject();
            jsonObject.put("ObjectName", currentObjectName);
            currentSubObject = null; // Reset sub-object for the new main object
        } else if (arr.length > 1 && arr[0] != null && !arr[0].isEmpty()) {
            // Sub-Main Object
            if (currentSubObject != null) {
                jsonObject.put(arr[0].trim(), currentSubObject);
            }

            currentSubObject = new JSONObject();
            currentSubObject.put("Min", arr[4].trim());
            currentSubObject.put("Average", arr[5].trim());
            currentSubObject.put("Max", arr[6].trim());
            currentSubObject.put("Cumulative counter value", arr[7].trim());
        }
    }

    @Override
    public void close() {
        // Handle the last object
        if (jsonObject != null) {
            collector.collect(jsonObject.toString());
        }
    }
}
