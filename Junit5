import org.junit.jupiter.api.Test;

import static org.junit.jupiter.api.Assertions.*;
import org.mockito.Mock;
import org.mockito.Mockito;

class UWAUpdatesHandlerApplicationTest {

    @Mock
    private MessageConsumer messageConsumer;

    @Test
    void testMain() {
        UWAUpdatesHandlerApplication.main(new String[] {});
        assertNotNull(UWAUpdatesHandlerApplication.log);
    }

    @Test
    void testMainException() {
        try {
            UWAUpdatesHandlerApplication.main(new String[] {});
        } catch (Exception e) {
            assertNotNull(e);
        }
    }

    @Test
    void testRunShutdownHook() {
        UWAUpdatesHandlerApplication app = new UWAUpdatesHandlerApplication();
        Thread mockThread = Mockito.mock(Thread.class);
        app.new Thread().run();
        assertNotNull(mockThread);
    }

}