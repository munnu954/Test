public class CsvToJsonConversion implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");
        JSONObject mainObject = null;

        for (int i = 0; i < arr.length; i++) {
            if (arr[i].isEmpty()) {
                continue;  // Skip empty columns
            }

            if (i % 7 == 2) {  // Main object details
                if (mainObject != null) {
                    collector.collect(mainObject.toString());
                }
                mainObject = new JSONObject();
                mainObject.put("ObjectName", arr[i + 2].trim());
                mainObject.put("Begin date", arr[i].trim());
                mainObject.put("End date", arr[i].trim());
                mainObject.put("Ticket number", arr[i].trim());
            }

            if (i % 7 == 3) {  // Sub-object details
                JSONObject subObject = new JSONObject();
                subObject.put("Min", arr[i + 3]);
                subObject.put("Average", arr[i + 4]);
                subObject.put("Max", arr[i + 5]);
                subObject.put("Cumulative counter value", arr[i + 6]);

                // Get the sub-object name dynamically from the CSV file
                String subObjectName = arr[i].trim();
                mainObject.put(subObjectName, subObject);
            }
        }

        if (mainObject != null) {
            collector.collect(mainObject.toString());
        }
    }
}
