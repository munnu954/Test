@Override
public Employee deleteEmployeeById(int id) {
    Optional<Employee> employee = employeeRepo.findById(id); // Retrieve the employee from the repository

    if (employee.isPresent()) {
        employeeRepo.deleteById(id); // Delete the employee if found
        return employee.get(); // Return the deleted employee
    } else {
        throw new ResourceNotFoundException("Employee not found with id: " + id); // Throw an exception if the employee is not found
    }
}