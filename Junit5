import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.springframework.jdbc.BadSqlGrammarException;
import org.springframework.jdbc.core.JdbcTemplate;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.mockito.ArgumentMatchers.any;
import static org.mockito.Mockito.when;

class AlarmRepositoryImplTest {

    @Mock
    private JdbcTemplate jdbcTemplate;

    @InjectMocks
    private AlarmRepositoryImpl alarmRepository;

    @Test
    void testPerformUpdateforACK_BadSqlGrammarException() {
        when(jdbcTemplate.update(any(String.class), any(Object[].class)))
                .thenThrow(new BadSqlGrammarException("test bad grammar", "test SQL"));

        int result = alarmRepository.performUpdateforACK("test", "time", "identity", 1);

        assertEquals(0, result);
    }

    @Test
    void testPerformUpdateforOpNote_BadSqlGrammarException() {
        when(jdbcTemplate.update(any(String.class), any(Object[].class)))
                .thenThrow(new BadSqlGrammarException("test bad grammar", "test SQL"));

        int result = alarmRepository.performUpdateforOpNote("text", "time", "identity", 1);

        assertEquals(0, result);
    }

    @Test
    void testPerformClearbyfeed_BadSqlGrammarException() {
        when(jdbcTemplate.update(any(String.class), any(Object[].class)))
                .thenThrow(new BadSqlGrammarException("test bad grammar", "test SQL"));

        int result = alarmRepository.performClearbyfeed(1, "clearTime", "time", "action", "identity", 1);

        assertEquals(0, result);
    }

    @Test
    void testPerformUpdateforHandleEvent_BadSqlGrammarException() {
        when(jdbcTemplate.update(any(String.class), any(Object[].class)))
                .thenThrow(new BadSqlGrammarException("test bad grammar", "test SQL"));

        int result = alarmRepository.performUpdateforHandleEvent("handledBy", "time", "identity", 1);

        assertEquals(0, result);
    }

    @Test
    void testPerformUpdateforHandleTicket_BadSqlGrammarException() {
        when(jdbcTemplate.update(any(String.class), any(Object[].class)))
                .thenThrow(new BadSqlGrammarException("test bad grammar", "test SQL"));

        int result = alarmRepository.performUpdateforHandleTicket("ticket", "status", "time", "identity", 1);

        assertEquals(0, result);
    }
}