import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;
import org.json.JSONObject;

public class CsvtoJsonTransformer implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String s, Collector<String> collector) throws Exception {
        String[] arr = s.split(",");
        JSONObject jsonObject = new JSONObject();

        for (int i = 0; i < arr.length; i++) {
            String key = "field" + i; // Assuming the keys are field0, field1, ...
            String value = arr[i].trim().replace("â€Œ", ""); // assuming you want to remove a special character
            jsonObject.put(key, value);
        }

        collector.collect(jsonObject.toString());
    }
}