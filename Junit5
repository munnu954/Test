@Test
void testEvaluateExpression_ExceptionHandling() {
    // Mocking the necessary objects
    Map<String, Object> topoMap = new HashMap<>();
    String expression = "%test_expression%";

    // Mocking the behavior to throw an exception
    when(AlarmPostingUtils.parse(eq(expression), eq(topoMap), eq("")))
            .thenThrow(new JsonProcessingException("Mocked exception"));

    // Calling the method that we want to test
    String result = alarmPostingUtils.evaluateExpression(expression, topoMap);

    // Verifying if the exception was logged
    verify(loggerMock).error(eq("Exception occurred while Parsing Expression: ()"), anyString());
}