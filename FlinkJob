public class Utils {
    public void sendAuditMessageToKafka(String inputFilePath, String url, Integer port, String outputFilePath,
                                        String delimiters, String fileType, DateTime dateReceived, DateTime dateProcessed,
                                        Integer numberOfRecordsInTheFile, Integer numberOfRecordsProcessed, Integer numberOfRecordsFailed,
                                        UUID jobId, UUID jarId, List<String> exceptions, UUID collectorId, JobStatus jobStatus,
                                        KafkaAuditProducer kafkaAuditProducer) {

        UnifiedAuditMessage auditMsg = new UnifiedAuditMessage(inputFilePath, url, port, outputFilePath, delimiters, fileType,
                dateReceived, dateProcessed, numberOfRecordsInTheFile, numberOfRecordsProcessed, numberOfRecordsFailed, jobId, jarId,
                exceptions, collectorId, jobStatus);

        kafkaAuditProducer.writeMessage(auditMsg);
    }
}