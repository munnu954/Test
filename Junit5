@ExtendWith(MockitoExtension.class)
class AlarmPostingUtilsTest {

    @Mock
    private Environment env;

    @InjectMocks
    private AlarmPostingUtils alarmPostingUtils;

    @Test
    void evaluateExpression_CatchBlockTest() {
        // Arrange
        String expression = "test %";
        Map<String, Object> topoMap = new HashMap<>();
        
        // Mocking the LogManager getLogger method
        Logger logger = Mockito.mock(Logger.class);
        Mockito.when(LogManager.getLogger(ArgumentMatchers.anyString())).thenReturn(logger);

        // Act
        String result = alarmPostingUtils.evaluateExpression(expression, topoMap);

        // Assert
        assertNull(result);
        Mockito.verify(logger).error("Exception occurred while Parsing Expression: {}", "");
    }
}