@Test
void parseWithNoAttributeName() throws Exception {
    String expression = "%attribute1:%";
    srcMap.put("details", Map.of("name", "John"));

    String result = alarmPostingUtils.parse(expression, srcMap, "");

    assertEquals("", result);
}

@Test
void parseWithNoJsonField() throws Exception {
    String expression = "%attribute1:details.%";
    srcMap.put("details", Map.of("name", "John"));

    String result = alarmPostingUtils.parse(expression, srcMap, "");

    assertEquals("", result);
}

@Test
void parseWithNoArrayIndex() throws Exception {
    String expression = "%attribute1:names%";
    srcMap.put("names", List.of("John", "Jane"));

    String result = alarmPostingUtils.parse(expression, srcMap, "");

    assertEquals("", result);
}

@Test
void parseWithNoJsonFormat() throws Exception {
    String expression = "%attribute1:details%";
    srcMap.put("details", "invalid format");

    String result = alarmPostingUtils.parse(expression, srcMap, "");

    assertEquals("", result);
}

@Test
void parseWithNoMatches() throws Exception {
    String expression = "%nonExistent%";

    String result = alarmPostingUtils.parse(expression, srcMap, "");

    assertEquals("%nonExistent%", result);
}