import java.util.Enum;
import java.util.List;
import java.util.UUID;

public class UnifiedAuditMessageFormat {
    private Enum processType;
    private String inputFilePath;
    private String url;
    private Integer port;
    private String outputFilePath;
    private String delimiters;
    private String fileType;
    private UUID collector_id;
    private String job_status;
    private List<String> exceptions;
    private DateTime date_received;
    private DateTime date_processed;
    private UUID job_id;
    private UUID jar_id;
    private Integer no_of_records_in_the_file;
    private Integer no_of_records_processed;
    private Integer no_of_records_failed;

    public UnifiedAuditMessageFormat(Enum processType, String inputFilePath, String url, Integer port,
                                     String outputFilePath, String delimiters, String fileType, UUID collector_id,
                                     String job_status, List<String> exceptions, DateTime date_received,
                                     DateTime date_processed, UUID job_id, UUID jar_id,
                                     Integer no_of_records_in_the_file, Integer no_of_records_processed,
                                     Integer no_of_records_failed) {
        this.processType = processType;
        this.inputFilePath = inputFilePath;
        this.url = url;
        this.port = port;
        this.outputFilePath = outputFilePath;
        this.delimiters = delimiters;
        this.fileType = fileType;
        this.collector_id = collector_id;
        this.job_status = job_status;
        this.exceptions = exceptions;
        this.date_received = date_received;
        this.date_processed = date_processed;
        this.job_id = job_id;
        this.jar_id = jar_id;
        this.no_of_records_in_the_file = no_of_records_in_the_file;
        this.no_of_records_processed = no_of_records_processed;
        this.no_of_records_failed = no_of_records_failed;
    }

    // Getters and setters for other fields...

    public void enrichForSuccessfulJob() {
        this.processType = ProcessTypeEnum.Transformer;
        this.job_status = JobStatusEnum.FLINK_JOB_SUCCESSFUL;
        // Set other relevant fields for a successful job...
    }

    public void enrichForFailedJob() {
        this.processType = ProcessTypeEnum.Transformer;
        this.job_status = JobStatusEnum.FLINK_JOB_FAILED;
        // Set other relevant fields for a failed job...
    }
}
