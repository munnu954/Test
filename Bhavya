public Optional poll(int partition) {
    // Get the next message from the partition
    ConsumerRecord record = kafkaTemplate.receive(topicName, partition);

    // If there is no message, return an empty Optional
    if (record == null) {
        return Optional.empty();
    }

    // Convert the message to a SpaceCollector object
    SpaceCollector spaceCollector = (SpaceCollector) record.value();

    // Return the SpaceCollector object
    return Optional.of(spaceCollector);
}