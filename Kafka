import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;

// ...

// Parse the response body to extract the jobID
ObjectMapper objectMapper = new ObjectMapper();
JsonNode responseBody = objectMapper.readTree(response.getBody());
JsonNode jobIDNode = responseBody.get("jobID");

if (jobIDNode != null && !jobIDNode.isNull()) {
    String jobID = jobIDNode.asText();
    // Pass the jobID to the updateJobStatus function
    updateJobStatus(auditMsg, jobID);
} else {
    throw new IllegalStateException("Invalid response: jobID is null");
}