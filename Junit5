import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.junit.jupiter.MockitoExtension;

import java.util.ArrayList;
import java.util.List;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.when;

@ExtendWith(MockitoExtension.class)
class EcpdFeedBatchProcessorTest {

    @Mock
    private SensitivityTokenService sensitivityTokenService;
    @InjectMocks
    private EcpdFeedBatchProcessor ecpdFeedBatchProcessor;

    @Test
    void process_WhenSensitivityTokenExists() {
        // Arrange
        EcpdGSAMSensitiveProfile ecpdGSAMSensitiveProfile = new EcpdGSAMSensitiveProfile();
        ecpdGSAMSensitiveProfile.setSensitivityToken("secret");
        List<String> sensitiveTokensList = new ArrayList<>();
        sensitiveTokensList.add("secret");
        when(sensitivityTokenService.getSensitiveTokenList()).thenReturn(sensitiveTokensList);

        // Act
        GSAMSensitiveProfiles result = ecpdFeedBatchProcessor.process(ecpdGSAMSensitiveProfile);

        // Assert
        assertNotNull(result);
        assertEquals("secret", result.getSensitivityToken());
    }

    @Test
    void process_WhenSensitivityTokenDoesNotExist() {
        // Arrange
        EcpdGSAMSensitiveProfile ecpdGSAMSensitiveProfile = new EcpdGSAMSensitiveProfile();
        ecpdGSAMSensitiveProfile.setSensitivityToken("top-secret");
        List<String> sensitiveTokensList = new ArrayList<>();
        sensitiveTokensList.add("secret");
        when(sensitivityTokenService.getSensitiveTokenList()).thenReturn(sensitiveTokensList);

        // Act
        GSAMSensitiveProfiles result = ecpdFeedBatchProcessor.process(ecpdGSAMSensitiveProfile);

        // Assert
        assertNull(result);
    }

    @Test
    void process_WhenSensitivityTokenIsNull() {
        // Arrange
        EcpdGSAMSensitiveProfile ecpdGSAMSensitiveProfile = new EcpdGSAMSensitiveProfile();
        ecpdGSAMSensitiveProfile.setSensitivityToken(null);
        List<String> sensitiveTokensList = new ArrayList<>();
        sensitiveTokensList.add("secret");
        when(sensitivityTokenService.getSensitiveTokenList()).thenReturn(sensitiveTokensList);

        // Act
        GSAMSensitiveProfiles result = ecpdFeedBatchProcessor.process(ecpdGSAMSensitiveProfile);

        // Assert
        assertNull(result);
    }

    @Test
    void process_WhenSensitivityTokenIsEmpty() {
        // Arrange
        EcpdGSAMSensitiveProfile ecpdGSAMSensitiveProfile = new EcpdGSAMSensitiveProfile();
        ecpdGSAMSensitiveProfile.setSensitivityToken("");
        List<String> sensitiveTokensList = new ArrayList<>();
        sensitiveTokensList.add("secret");
        when(sensitivityTokenService.getSensitiveTokenList()).thenReturn(sensitiveTokensList);

        // Act
        GSAMSensitiveProfiles result = ecpdFeedBatchProcessor.process(ecpdGSAMSensitiveProfile);

        // Assert
        assertNull(result);
    }
}