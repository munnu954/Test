import org.junit.Test;

public class TextToJsonJobTest {

    private ExecutionEnvironment env;
    private TextToJsonJob job;

    @Before
    public void setUp() throws Exception {
        env = ExecutionEnvironment.getExecutionEnvironment();
        job = new TextToJsonJob();
    }

    @Test
    public void testUploadToFlinkCluster() throws Exception {
        String inputFilePath = "/path/to/input/file";
        String outputFilePath = "/path/to/output/file";

        // Set the input and output file paths.
        job.setInputFilePath(inputFilePath);
        job.setOutputFilePath(outputFilePath);

        // Run the job.
        JobExecutionResult result = job.run(env);

        // Assert that the job succeeded.
        assertEquals(0, result.getFailures().size());
