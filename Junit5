import org.junit.jupiter.api.Test;
import org.mockito.Mockito;
import org.springframework.boot.SpringApplication;

import static org.mockito.Mockito.*;

class CommonWrapperApplicationTest {

    @Test
    void main_ShouldRunSuccessfully() {
        // Arrange
        String[] args = new String[]{};

        // Act
        CommonWrapperApplication.main(args);

        // Assert (if no exception is thrown, it means the application started successfully)
        // You can also verify that SpringApplication.run was called.
        // However, since we cannot directly verify static methods, we can use a spy.
        try (var spy = Mockito.mockStatic(SpringApplication.class)) {
            spy.when(() -> SpringApplication.run(CommonWrapperApplication.class, args)).thenCallRealMethod();

            // Act
            CommonWrapperApplication.main(args);

            // Assert
            spy.verify(() -> SpringApplication.run(CommonWrapperApplication.class, args), times(1));
        }
    }
}