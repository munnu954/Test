import org.apache.flink.api.common.functions.FlatMapFunction;
import org.apache.flink.util.Collector;
import org.json.JSONArray;
import org.json.JSONObject;

public class CsvToJsonConversion implements FlatMapFunction<String, String> {

    @Override
    public void flatMap(String input, Collector<String> collector) throws Exception {
        String[] arr = input.split(",");
        JSONObject mainObject = new JSONObject();
        JSONArray subObjects = new JSONArray();

        for (int i = 0; i < arr.length; i++) {
            if (arr[i].isEmpty()) {
                continue;  // Skip empty columns
            }

            if (i % 7 == 2) {  // Main object details
                mainObject.put("ObjectName", arr[i].trim());
            } else if (i % 7 == 0 && i + 3 < arr.length) {  // BeginDate details
                mainObject.put("Begin date", arr[i].trim());
            } else if (i % 7 == 1 && i + 3 < arr.length) {  // EndDate details
                mainObject.put("End date", arr[i].trim());
            } else if (i % 7 == 5 && i + 6 < arr.length) {  // Ticket number details
                mainObject.put("Ticket number", arr[i].trim());
            } else if (i % 7 == 6 && i + 6 < arr.length) {  // Sub-object details
                JSONObject subObject = new JSONObject();
                subObject.put("Min", arr[i + 1].trim());
                subObject.put("Average", arr[i + 2].trim());
                subObject.put("Max", arr[i + 3].trim());
                subObject.put("Cumulative counter value", arr[i + 4].trim());
                subObjects.put(subObject);
            }
        }

        if (subObjects.length() > 0) {
            mainObject.put("SubObject", subObjects);
        }

        collector.collect(mainObject.toString());
    }
}
