public Optional<SpaceCollector> poll(int timeout) {
        try {
            ConsumerRecord<String, Object> record = kafkaTemplate.receive(topicName, timeout);
            if (record == null) {
                return Optional.empty();
            }
            SpaceCollector spaceCollector = (SpaceCollector) record.value();
            return Optional.of(spaceCollector);
         catch (Exception e) {
            Logger.error("Error while polling Kafka topic: " + e.getMessage());
            return Optional.empty();
        }}