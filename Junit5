import org.junit.jupiter.api.Test;

import static org.junit.jupiter.api.Assertions.assertEquals;

public class ConstantsTest {

    @Test
    public void testRetryCount() {
        assertEquals(5, Constants.RETRY_COUNT);
    }

    @Test
    public void testProtocolConfig() {
        assertEquals("SASL_SSL", Constants.PROTOCOL_CONFIG);
    }

    @Test
    public void testConstantsConstructor() {
        Constants constants = new Constants();
        assertEquals(Constants.RETRY_COUNT, constants.RETRY_COUNT);
        assertEquals(Constants.PROTOCOL_CONFIG, constants.PROTOCOL_CONFIG);
    }
}