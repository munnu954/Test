import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.mockito.Mockito.mock;
import static org.mockito.Mockito.when;

import java.util.HashMap;
import java.util.Map;

import org.junit.jupiter.api.Test;

public class AlarmPostingUtilsTest {

    @Test
    public void testParseElseBlock() throws Exception {
        // Given
        Map<String, Object> srcMap = new HashMap<>();
        srcMap.put("testAttribute", "testValue");

        String value = "%testAttribute%";
        String ruleName = "testRule";

        // Mocking the Environment and Logger
        Environment env = mock(Environment.class);
        AlarmPostingUtils.LOG = mock(Logger.class);

        AlarmPostingUtils alarmPostingUtils = new AlarmPostingUtils(env);

        // When
        String result = alarmPostingUtils.parse(value, srcMap, ruleName);

        // Then
        assertEquals("", result);
    }
}