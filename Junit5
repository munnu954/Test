@Test
void testCheckIfJsonValueFalseCondition() throws JsonProcessingException {
    // Arrange
    AlarmRepositoryImpl alarmRepository = new AlarmRepositoryImpl();
    Object obj = new Object();
    ObjectMapper objectMapper = Mockito.mock(ObjectMapper.class);
    Mockito.when(AlarmPostingConstants.getObjectMapper()).thenReturn(objectMapper);
    Mockito.when(objectMapper.writeValueAsString(obj)).thenThrow(JsonProcessingException.class);

    // Act
    boolean result = alarmRepository.checkIfJsonValue(obj);

    // Assert
    assertFalse(result);
}